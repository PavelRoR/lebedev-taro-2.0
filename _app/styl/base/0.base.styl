*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: T
	background-color #fff
	color #000
	line-height: 1.5
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.laptop-wrapper
	position relative
	z-index 50
	&:before
		content ''
		display block
		width 120%
		height 143%
		padding-top: 31.25%
		margin 0 auto
		top -12%
		left -10%
		right 0
		position absolute
		background-image url(../img/images/laptop.png)
		background-repeat no-repeat
		background-position: center
		background-size cover
.video-wrapper
	margin 0 auto
	position relative
	width 90%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 3px
		border: 0
		top 3%
		left 0
		right 0
		bottom 0
		cursor pointer
.button
	display block
	margin 0 auto
	text-align center
	color #ffffff
	font-size: 16px
	border-radius: 10px;
	box-shadow: inset 0px 1px 8.7px 1.3px rgba(255, 255, 255, 0.57), 0 3px 0 0 #1f293b, 0px 1px 30px 0px rgba(84, 103, 142, 0.4);
	width: 100%
	max-width: 300px;
	padding 18px 10px
	background-color: #28364d
	background-image: linear-gradient(to top,#28364d,#677baa)
	transition: all .2s ease
	&:focus
		text-decoration none
		color #fff
	&:hover
		color #fff
		text-decoration none
		background-color: #28364d - 15%
		background-image: linear-gradient(to bottom,#28364d,#677baa)
		box-shadow: inset 0px 1px 8.7px 1.3px rgba(255, 255, 255, 0.57), 0 0 0 0 #1f293b, 0px 1px 20px 0px rgba(84, 103, 142, 0.6);
		transform: translateY(3px)
	&-form
		position relative
		&:after
			content ''
			display block
			position absolute
			width 38px
			height 48px
			background-image url(../img/images/button.png)
			background-repeat no-repeat
			background-position: center
			background-size contain
			top 10px
			right -10px
.general-title
	text-align center
	font-size: 35px
	font-family: TB
	font-weight: bold
	color #ffffff
	margin-bottom: 35px
	&-black
		color #000