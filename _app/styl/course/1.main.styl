#main
	padding 0 0 60px
	background-color: #F8F2E4
	background-image url('../img/backs/main.png')
	background-repeat no-repeat
	background-position: top 20px right -200px
	position relative
	.container
		position relative
		z-index 20
	&:before
		content ''
		display block
		width 100%
		max-width 1920px
		height 1000px
		background-image url(../img/images/clouds-main.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
		position: absolute
		margin 0 auto
		left 0
		right 0
		bottom: -480px
.pre
	margin-top: 20px
	font-size: 16px
	font-family: TL
	font-weight: 100
.main-title
	font-size: 45px
	font-family: TBk
	font-weight: 900
	color MB
	text-transform uppercase
	line-height: 1.3
	margin 20px 0 40px
	span
		display block
		font-size: 65px
	small
		display block
		text-transform none
		font-family: T
		font-weight: normal
		font-size: 20px
.main-info
	font-size: 16px
	font-family: TI
	font-style: italic
	color MB
	margin-bottom: 10px
	span
		display inline-block
	&:last-of-type
		margin-bottom: 50px
.button-main
	margin-left: 0