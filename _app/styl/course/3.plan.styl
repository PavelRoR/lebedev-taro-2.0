#plan
	padding 60px 0
	background-color: #2C2825
	background-image url('../img/backs/for.png')
	background-repeat no-repeat
	background-position: center
	background-size: cover
.plan-packet
	display block
	color #fff
	padding 35px
	// width 100%
	// max-width 380px
	margin 0 auto 50px
	box-shadow: 0px 1px 18.2px 1.8px rgba(25, 25, 26, 0.004);
	background-image linear-gradient(to top, rgba(#19191a,.6), rgba(#736f6d, .6))
	border-radius: 10px;
	box-shadow: 0px 1px 18.2px 1.8px rgba(25, 25, 26, 0.004);
	min-height 333px
	text-align center
	&-title
		font-size: 22px
		font-family: TB
		color #fff
		margin-bottom: 20px
	&-text
		color #fff
	&:focus
	&:hover
		color #fff
.more-button
	font-size: 20px
	font-family: TI
	font-style: italic
	display inline-block
	border-bottom: 2px dotted
	margin-top: 15px
	color #fff
	transition: all .2s ease
	&:hover
		border-bottom-color: transparent