#about
	padding 200px 0 60px
.about-item
	padding 30px 30px 50px
	border: 5px solid #28364d
	position relative
	border-radius: 10px
	z-index 20
	background-color #fff
	&:after
		content: '” ”'
		display block
		position absolute
		font-size: 120px
		color #28364d
		line-height: 30px
		height: 30px
		width 200px
		background-color #fff
		margin 0 auto
		left 0
		right 0
		bottom: -30px
		text-align center
		padding-top: 15px
	&-text
		text-align center
		font-size: 20px
		span
			display block
			font-family: TB
			font-weight: bold
			text-transform uppercase
		&:last-of-type
			margin-top: 20px