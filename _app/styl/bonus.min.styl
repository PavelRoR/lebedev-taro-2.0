@import 'base/0.fonts'

@import '../_css/bootstrap.min.css'

@import 'base/0.base'
	
@import 'base/0.header'

#main
	padding: 0 0 150px
	background-color: #F8F2E4
	background-image url('../img/backs/main.png')
	background-repeat no-repeat
	background-position: top 20px right -200px
	text-align center
	position relative
	overflow hidden
	min-height calc(100vh - 147px)

	.container
		position relative
		z-index 20
	&:before
		content ''
		display block
		width 100%
		max-width 1920px
		height 1000px
		background-image url(../img/images/clouds-main.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
		position: absolute
		margin 0 auto
		left 0
		right 0
		bottom: -500px
	&.remind
		background-image: none
.pre
	font-size: 20px
	font-family: TL
.main-title
	font-size: 36px
	font-family: TBk
	font-weight: 900
	color MB
	text-transform uppercase
	a
		color #677baa
		display block
.main-subtitle
	font-size: 24px
	margin-top: 20px
.laptop-wrapper-main
	margin 40px 0 0
	max-width 560px
@import 'base/0.footer'