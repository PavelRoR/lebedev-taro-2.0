@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	header
		margin-bottom: 120px
	.main-title
		font-size: 30px
	.main-subtitle
		font-size: 26px
@media screen and (max-width 1199px)
	header
		padding 10px 0
	.header-logo
		float: none
		display block
		margin 0 auto 3px
		width 100px
		height 44px
	.contacts
		text-align: center
		float: none
	.contact
		line-height: 1.2
@media screen and (max-width 560px)
	.checking .check-label
		line-height: 17px
	.bots-link
		width 50%
@media screen and (max-width 485px)
	header
		margin-bottom: 20px
	.header-logo
		width 80px
		height 36px
	.contact
		font-size 12px
		line-height: 14px
		background-size: 16px
		padding-left: 16px
		margin-left: 5px
		&&-email
			background-size: 16px
			padding-left: 18px
			margin-left: 5px
	#main
		padding 0 0 40px
	.main-title
		font-size: 22px
		span
			font-size: 22px
	.main-subtitle
		font-size: 20px
		margin 20px 0 30px
		line-height: 1.2
		span
			font-size: 24px
	.modal-title
		font-size: 22px
	.button-thanks
		margin 20px auto 40px
	.main-container
		margin 20px auto 30px
	.button-bots, .button-form, .button-thanks
		font-size: 16px
	footer
		padding 15px 0
		h5
			font-size: 18px
			line-height: 1.2
	.soc-buttons a
		margin 10px 5px 5px
	footer p
		font-size: 12px
@media screen and (max-width 385px)
	#main
		padding 0 0 30px
	.main-title
		font-size: 20px
		span
			font-size: 20px
	.main-container
		padding 15px
	.modal-title
		font-size: 20px
	.button-bots, .button-form, .button-thanks
		font-size: 14px
	.main-subtitle
		font-size: 18px
		span
			font-size: 20px
	