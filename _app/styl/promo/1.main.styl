#main
	padding: 0 0 60px
	background-color: #F8F2E4
	min-height calc(100vh - 147px)
	overflow hidden
	text-align center
	position relative
	.container
		position relative
		z-index 20
	&:before
		content ''
		display block
		width 100%
		max-width 1920px
		height 1000px
		background-image url(../img/images/clouds-main.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
		position: absolute
		margin 0 auto
		left 0
		right 0
		bottom: -500px
.main-title
	font-size: 26px
	font-family: TB
	font-weight: bold
	color MB
	text-transform uppercase
	margin-bottom: 30px
	span
		display block
		font-size: 28px
.main-subtitle
	font-size: 20px
	font-family: T
	font-weight: normal
	margin 70px 0 90px
.form
	border-radius: 10px;
	box-shadow: 0px 1px 44.16px 1.84px rgba(0, 0, 0, 0.3);
	background-color #fff
	padding 40px
	width 100%
	max-width 450px
	margin 0 auto
	&-title
		font-size: 30px
		font-family: TBk
		font-weight: 900
		text-align center
		margin-bottom: 25px
.input
	width 100%
	max-width 300px
	margin 0 auto 15px
	display block
	border 1px solid rgb(145, 147, 147);
	border-radius: 10px;
	padding 18px 10px
	font-size: 16px
	background-color #fff
@-webkit-keyframes autofill
	to
		font-size: 16px
		color: #000
		background-color: #fff
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
