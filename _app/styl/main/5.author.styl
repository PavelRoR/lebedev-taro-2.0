#author
	padding 210px 0 0
.author-list
	position relative
	padding 80px
	border-radius: 10px;
	box-shadow: 0px 1px 18.2px 1.8px rgba(25, 25, 26, 0.004);
	background-image: linear-gradient(to top, rgba(#19191a,.8),rgba(#736f6d,.8))
	width 100%
	max-width 600px
	margin 0 auto 100px
	color #fff
	list-style: none
	&:before
		content ''
		display block
		position absolute
		background-image url(../img/images/author-cards.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
		left -35px
		bottom -55px
		width 133px
		height 156px
.author-img
	position absolute
	width 570px
	top -50px
	right 0