@media screen and (min-width 1900px)
	#main:before
	#last:before
		max-width none
		background-size: cover
	#main:before
		bottom -400px
	#lets:before, #plan:before
		max-width none
		background-size: 100% 100%
		// height 1000px
	#last:before
		background-position: top center
@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.day
		min-height 1084px
	.day-body
		min-height 540px
	.day-wrapper-3:before
		top 320px
	.day-3 .day-body
		min-height 509px
	.lets-item
		max-width 450px
	#last:before, #lets:before, #plan:before
		bottom -260px
	#main:before
		top 0
	#main
		padding-bottom: 100px
	.main-subtitle
		margin: 50px 0
	#main:before
		bottom: -500px
@media screen and (max-width 1199px)
	#main
		background-position: top 20px right -370px
	.form-main
		margin-top: -30px
	.for-item
		height 310px
		padding 20px
	.day
		min-height 1225px
	.day-body
		min-height 621px
	.day-3 .day-body
		min-height 590px
	.day-wrapper-3:before
		top 400px
		right 0
	.lets-item
		padding 20px
		min-height 371px
	.button-lets
		margin-top: 309px
	.author-img
		right -100px
	#author
		overflow hidden
@media screen and (max-width 991px)
	#main
		background-position: top 20px right -600px
	.main-subtitle
		margin 10px 0 30px
	.form
		padding 30px
	.form-title
		font-size: 24px
		line-height: 1.1
	#form
		padding 50px 0 60px
	#for
	#plan
		padding 60px 0
	.for-item
		height 180px
		margin-bottom: 30px
		&-4
			margin-bottom: 50px
	.day
	.day-body
	.day-3 .day-body
		min-height 1px
	.day-wrapper-3::before
		content: none
	#lets:before, #plan:before
		bottom -265px
	.lets-item
		min-height 250px
	.button-lets
		margin-top: 50px
	#author
		padding 120px 0 0
	.author-img
		right -150px
	#last
		padding 50px 0
	.last-title
		font-size: 40px
		margin-bottom: 30px
	.last-text
		font-size: 20px
		&:last-of-type
			margin 20px 0
	#last:before
		bottom -310px
	.form-modal
		padding 40px 40px 30px
@media screen and (max-width 767px)
	header
		margin-bottom: 20px
	.header-logo
		float: none
		margin 0 auto 5px
		width: 80px;
		height: 35px;
	.contacts
		text-align center
		float none
		line-height: 1
	.contact
		margin 0 5px
		display inline-block
	#main
		text-align center
		background-image: none
		padding 0
	.main-title
		font-size: 32px
		span
			font-size: 40px
	.laptop-wrapper-main
		margin-top: 20px
	.laptop-wrapper:before
		width 100%
		left 0
		height 121%
		top -1%
	.video-wrapper iframe, .video-wrapper img
		width 85%
		margin 0 auto
	.form-main
		margin-top: 100px
	.author-img
		position: static
		display block
		margin 0 auto
		width 100%
		max-width 570px
	.author-list
		padding 30px
		margin-bottom: 50px
		&:before
			left: -101px;
			bottom: -43px;
	#Politics
		padding 20px
