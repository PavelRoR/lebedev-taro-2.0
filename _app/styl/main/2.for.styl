#for
	padding 90px 0
	background-color: #2C2825
	background-image url('../img/backs/for.png')
	background-repeat no-repeat
	background-position: center
	background-size: cover
.for-item
	display table
	padding 35px
	width 100%
	max-width 380px
	margin 0 auto 50px
	box-shadow: 0px 1px 18.2px 1.8px rgba(25, 25, 26, 0.004);
	background-image linear-gradient(to top, rgba(#19191a,.6), rgba(#736f6d, .6))
	border-radius: 10px;
	box-shadow: 0px 1px 18.2px 1.8px rgba(25, 25, 26, 0.004);
	height 286px
	&-text
		color #fff
		text-align center
		display table-cell
		vertical-align middle